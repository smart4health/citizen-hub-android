<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/fragment_pairing_guide_button_skip"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

    <ImageView
        android:contentDescription="@string/fragment_pairing_guide_image_description"
        android:id="@+id/fragment_pairing_guide_imageView_s4h"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_s4h_logo"
        android:scaleType="fitCenter" android:layout_marginTop="128dp"/>

    <TextView
        android:fontFamily="@font/lato"
        android:id="@+id/fragment_pairing_guide_text_view"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:layout_width="match_parent"
        android:text="@string/fragment_pairing_guide_text"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_pairing_guide_imageView_s4h"
        />

    <Button
        android:id="@+id/fragment_pairing_guide_button_skip"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_width="wrap_content"
        android:text="@string/fragment_pairing_guide_button_skip_text"
        app:layout_constraintTop_toBottomOf="@+id/fragment_pairing_guide_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <Button
        android:id="@+id/fragment_authentication_button_to_search_devices"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_width="wrap_content"
        android:text="@string/fragment_pairing_guide_button_connect_text"
        app:layout_constraintTop_toBottomOf="@+id/fragment_pairing_guide_button_skip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
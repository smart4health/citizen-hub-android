<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/DeviceConfiguration.LinearLayout"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.devices.DeviceIdentificationFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="bottom|center"
            android:layout_height="match_parent">

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/button_connect"
                    style="@style/Widget.MyApp.ExtendedFloatingActionButton"
                    android:text="@string/fragment_device_connect_button"
                    android:theme="@style/AppTheme"
                    android:visibility="visible"
                    app:iconTint="@color/colorS4HWhite"
                    app:icon="@drawable/ic_baseline_add_24" />
        </RelativeLayout>
</LinearLayout>
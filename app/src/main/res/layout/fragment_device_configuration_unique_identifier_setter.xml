<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    style="@style/DeviceConfiguration.LinearLayout"
    android:layout_marginVertical="10dp"
    android:layout_height="match_parent">

    <TextView
        style="@style/AdvancedConfigurationFragmentCategoryTextView"
        android:text="@string/fragment_unique_device_identifier_setter_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/fragment_device_configuration_udi_setter_textview"
        style="@style/DeviceConfiguration.EditText"
        android:hint="@string/fragment_device_configuration_udi_setter_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/udi_set_button"
            android:paddingHorizontal="10dp"
            style="@style/Widget.Citizen.Button"
            android:text="@string/fragment_device_configuration_udi_set_button" />

        <Button
            android:id="@+id/udi_clear_button"
            android:paddingHorizontal="10dp"
            style="@style/Widget.Citizen.Button"
            android:text="@string/fragment_device_configuration_udi_clear_button" />
    </LinearLayout>
</LinearLayout>
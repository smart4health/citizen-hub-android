<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    style="@style/DeviceConfiguration.LinearLayout"
    tools:context=".ui.devices.DeviceConfigurationFragment">

    <LinearLayout
        android:id="@+id/layoutConfigurationMeasurements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:visibility="visible">

        <TextView
            android:id="@+id/textConfigurationMeasurements"
            style="@style/AdvancedConfigurationFragmentCategoryTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_advanced_settings"
            tools:visibility="visible" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:visibility="visible">

        <ViewStub
            android:id="@+id/layoutStubConfigurationAdvancedSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inflatedId="@+id/layoutStubConfigurationAdvancedSettingsInflated"
            tools:visibility="visible" />

    </FrameLayout>
</LinearLayout>

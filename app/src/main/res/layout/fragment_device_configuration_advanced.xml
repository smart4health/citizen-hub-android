<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeviceConfigurationFragment">

    <LinearLayout
        android:id="@+id/layoutConfiguration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutConfigurationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textConfigurationDeviceName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/layout_fragment_device_configuration_name"
                style="@style/TextAppearance.Citizen.Widget.Toolbar.Title"
                android:textAlignment="center"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutConfigurationAdvancedAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/textConfigurationAdvancedDeviceNameValue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/layout_device_configuration_device_name_value"
                style="@style/TextAppearance.Citizen.Widget.Toolbar.Title"
                android:textAlignment="center"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutConfigurationAdvancedAddressLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/textConfigurationDeviceAdvancedAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/fragment_device_configuration_advanced_address_text"
                style="@style/TextAppearance.Citizen.Widget.Toolbar.Title"
                android:textAlignment="center"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutConfigurationAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/textConfigurationDeviceAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/layout_device_configuration_device_address_value"
                style="@style/TextAppearance.Citizen.Widget.Toolbar.Title"
                android:textAlignment="center"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutConfigurationMeasurements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textConfigurationMeasurements"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/fragment_device_configuration_advanced_text_advanced_configuration"
                style="@style/AppTheme.Summary.Item"
                android:textAlignment="center"
                android:textSize="18sp" />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutConfigurationAdvancedSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ViewStub
                    android:id="@+id/layoutStubConfigurationAdvancedSettings"
                    android:inflatedId="@+id/layoutStubConfigurationAdvancedSettingsInflated"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutConfigurationAdvancedOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <Button
                android:id="@+id/buttonConfigurationAdvancedOK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_device_configuration_advanced_update_text"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
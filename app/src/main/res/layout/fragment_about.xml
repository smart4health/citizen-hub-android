<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutFragment">

    <TextView
        android:id="@+id/text_about_ce_info"
        style="@style/AppTheme.Summary.Item.TextView"
        android:layout_width="385dp"
        android:layout_height="76dp"
        android:fontFamily="@font/roboto_slab"
        android:text="@string/about_european_commission_info"
        android:textAlignment="center"
        android:textColor="@color/colorS4HDarkBlue"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_ec_logo"
        app:layout_constraintVertical_bias="0.407" />

    <Button
        android:id="@+id/about_privacy_policy_button"
        android:layout_width="191dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:background="@color/colorS4HGreyLight"
        android:padding="8dp"
        android:text="@string/about_privacy_policy_button"
        android:textColor="@color/colorS4HDarkBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_about_1paragraph" />

    <Button
        android:id="@+id/about_open_sources_button"
        android:layout_width="191dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:background="@color/colorS4HGreyLight"
        android:padding="8dp"
        android:text="@string/about_open_source_licenses"
        android:textColor="@color/colorS4HDarkBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about_licenses_button" />

    <Button
        android:id="@+id/about_licenses_button"
        android:layout_width="191dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@color/colorS4HGreyLight"
        android:padding="8dp"
        android:text="@string/about_licenses_of_use"
        android:textColor="@color/colorS4HDarkBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about_privacy_policy_button" />

    <ImageView
        android:id="@+id/img_ec_logo"
        android:layout_width="217dp"
        android:layout_height="84dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/about_kbz_logo"
        android:src="@drawable/img_ec_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_about_contact"
        app:layout_constraintVertical_bias="0.028" />

    <ImageView
        android:id="@+id/img_logo_kbz"
        android:layout_width="151dp"
        android:layout_height="87dp"
        android:layout_marginStart="222dp"
        android:layout_marginTop="206dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/img_logo_kbz"
        android:src="@drawable/img_kbz_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_logo_uninova"
        android:layout_width="181dp"
        android:layout_height="81dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="191dp"
        android:contentDescription="@string/img_uninova_logo"
        android:src="@drawable/img_uninova_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_about_logo_smart4health"
        android:layout_width="209dp"
        android:layout_height="64dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="101dp"
        android:contentDescription="@string/about_smart4health_logo"
        android:src="@drawable/img_s4h_logo_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_about_1paragraph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/roboto_slab"
        android:text="@string/about_developedBy"
        android:textAlignment="center"
        android:textColor="@color/colorS4HDarkBlue"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.215"
        style="@style/AppTheme.Summary.Item.TextView"/>

    <TextView
        android:id="@+id/text_about_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_slab"
        android:text="@string/about_contact_email"
        android:textAlignment="center"
        android:textColorLink="@color/colorS4HLightBlue"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about_open_sources_button" />

    <TextView
        android:id="@+id/text_about_versioning"
        style="@style/AppTheme.Summary.Item.TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/roboto_slab"
        android:text="@string/about_versioning"
        android:textAlignment="center"
        android:textColor="@color/colorS4HDarkBlue"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_about_logo_smart4health"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="210dp" />

</androidx.constraintlayout.widget.ConstraintLayout>



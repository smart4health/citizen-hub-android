<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorS4HDarkBlue"
    tools:context=".ui.lobby.LobbyActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="422dp"
        android:layout_height="300dp"
        android:src="@drawable/img_citizen_hub_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.433"
        android:contentDescription="@string/activity_splash_citizen_hub_logo" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="406dp"
        android:layout_height="85dp"
        android:layout_marginBottom="188dp"
        android:text="@string/activity_splash_citizen_hub_text"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorS4HLightBlue"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/logo" />
</androidx.constraintlayout.widget.ConstraintLayout>
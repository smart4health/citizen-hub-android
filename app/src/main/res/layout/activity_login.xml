<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3">

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:layout_marginTop="28dp"
        android:buttonTint="@color/colorS4HDarkBlue"
        android:fontFamily="@font/lato"
        android:foregroundGravity="center_vertical|center|center_horizontal"
        android:gravity="center|center_horizontal|center_vertical"
        android:onClick="displayMessage"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="I accept."
        android:textColor="@color/colorS4HDarkBlue"
        grid:layout_constraintEnd_toEndOf="parent"
        grid:layout_constraintHorizontal_bias="0.5"
        grid:layout_constraintStart_toStartOf="parent"
        grid:layout_constraintTop_toBottomOf="@+id/text_password_login" />

    <TextView
        android:id="@+id/textView_smarty3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/roboto_slab"
        android:gravity="center"
        android:text="Citizen Hub"
        android:textColor="@color/colorS4HDarkBlue"
        android:textSize="50sp"
        grid:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView_smarty4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/lato"
        android:gravity="center"
        android:text="powered by"
        android:textColor="@color/colorS4HDarkBlue"
        android:textSize="18sp"
        grid:layout_constraintTop_toBottomOf="@+id/textView_smarty3"
        tools:layout_editor_absoluteX="28dp" />

    <ImageView
        android:id="@+id/image_login"
        android:layout_width="wrap_content"
        android:layout_height="69dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/logo_s4h_2"
        grid:layout_constraintBottom_toTopOf="@+id/text_email_login"
        grid:layout_constraintEnd_toEndOf="parent"
        grid:layout_constraintHorizontal_bias="0.5"
        grid:layout_constraintStart_toStartOf="parent"
        grid:layout_constraintTop_toBottomOf="@+id/textView_smarty4" />

    <EditText
        android:id="@+id/text_email_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/lato"
        android:gravity="center"
        android:hint="Enter your e-mail"
        android:linksClickable="false"
        android:textColor="@color/colorS4HDarkBlue"
        android:textColorHint="@color/colorS4HGrey"
        android:textColorLink="@color/colorS4HGrey"
        android:textSize="30sp"
        grid:layout_constraintEnd_toEndOf="parent"
        grid:layout_constraintHorizontal_bias="0.0"
        grid:layout_constraintStart_toStartOf="parent"
        grid:layout_constraintTop_toBottomOf="@+id/image_login" />

    <EditText
        android:id="@+id/text_password_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lato"
        android:gravity="center"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:textColor="@color/colorS4HDarkBlue"
        android:textColorHint="@color/colorS4HGrey"
        android:textColorLink="@color/colorS4HGrey"
        android:textSize="30sp"
        grid:layout_constraintTop_toBottomOf="@+id/text_email_login"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@color/colorS4HWhite"
        android:fontFamily="@font/roboto_slab"
        android:onClick="checkLogin"
        android:padding="20dp"
        android:text="Login"
        android:textColor="@color/colorS4HDarkBlue"
        android:textColorLink="@color/colorS4HDarkBlue"
        grid:layout_constraintEnd_toEndOf="parent"
        grid:layout_constraintHorizontal_bias="0.5"
        grid:layout_constraintStart_toStartOf="parent"
        grid:layout_constraintTop_toBottomOf="@+id/checkBox" />

</androidx.constraintlayout.widget.ConstraintLayout>
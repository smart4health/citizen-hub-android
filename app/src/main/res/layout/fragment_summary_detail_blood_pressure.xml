<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="@color/colorS4HDarkBlue"
            app:tabTextColor="@color/colorS4HDarkBlue"
            app:tabTextAppearance="@style/SummaryDetailPrimaryTabLayout">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/summary_detail_time_today"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/summary_detail_time_last_week"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/summary_detail_time_last_month"/>

        </com.google.android.material.tabs.TabLayout>

        <RelativeLayout
            android:id="@+id/relative_layout_avg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="40dp"
            android:layout_below="@+id/tab_layout">

            <View
                android:id="@+id/view_systolic"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/tv_systolic"
                android:background="@drawable/rectangle_light_blue"/>

            <TextView
                android:id="@+id/tv_systolic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_toStartOf="@+id/view_diastolic"
                android:gravity="center"
                android:text="@string/summary_detail_blood_pressure_systolic"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <View
                android:id="@+id/view_diastolic"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toStartOf="@+id/tv_diastolic"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:background="@drawable/rectangle_orange"/>

            <TextView
                android:id="@+id/tv_diastolic"
                android:layout_toStartOf="@+id/view_mean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:text="@string/summary_detail_blood_pressure_diastolic"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <View
                android:id="@+id/view_mean"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/tv_mean"
                android:background="@drawable/rectangle_turquoise"/>

            <TextView
                android:id="@+id/tv_mean"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:text="@string/summary_detail_blood_pressure_mean"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:textStyle="bold"/>

        </RelativeLayout>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/line_chart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@+id/tab_layout"
            tools:visibility="visible"/>

    </RelativeLayout>

</ScrollView>
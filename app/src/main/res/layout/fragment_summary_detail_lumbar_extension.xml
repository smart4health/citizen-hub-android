<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:id="@+id/lumbarExtensionTableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="13"
        tools:ignore="MissingConstraints">

        <TableRow
            android:id="@+id/trColumnCaptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="@+id/fragment_report_detail_text_view_year"
            app:layout_constraintTop_toBottomOf="@+id/fragment_report_detail_text_view_year">

            <TextView
                android:id="@+id/tvInfoFirstColumn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:gravity="left"
                android:paddingStart="30dp"
                android:textSize="5pt"
                android:textColor="@color/colorS4HOrange"
                android:textStyle="italic"
                android:visibility="invisible"
                tools:ignore="MissingConstraints"/>

            <TextView
                android:id="@+id/tvInfoSecondColumn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="8dp"
                android:gravity="right"
                android:text=""
                android:textSize="5pt"
                android:textColor="@color/colorS4HOrange"
                android:textStyle="italic"
                android:visibility="visible"
                tools:ignore="MissingConstraints"/>

            <TextView
                android:id="@+id/tvInfoThirdColumn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="2dp"
                android:gravity="right"
                android:text="Units"
                android:textSize="5pt"
                android:textColor="@color/colorS4HOrange"
                android:textStyle="italic"
                android:visibility="invisible"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tvInfoFourthColumn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="4dp"
                android:gravity="right"
                android:text=""
                android:textSize="5pt"
                android:textColor="@color/colorS4HOrange"
                android:textStyle="italic"
                android:visibility="visible"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tvInfoFifthColumn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="2dp"
                android:gravity="left"
                android:text="Units"
                android:textSize="5pt"
                android:textColor="@color/colorS4HOrange"
                android:textStyle="italic"
                android:visibility="invisible"
                tools:ignore="MissingConstraints"/>

        </TableRow>

    </TableLayout>

    <!--com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/colorS4HDarkBlue"
        app:tabTextColor="@color/colorS4HDarkBlue"
        app:tabTextAppearance="@style/SummaryDetailSecondaryTabLayout"
        app:tabIndicatorFullWidth="false">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/summary_detail_lumbar_extension_duration"/>

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/summary_detail_lumbar_extension_score"/>

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/summary_detail_lumbar_extension_repetitions"/>

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/summary_detail_lumbar_extension_weight"/>

    </com.google.android.material.tabs.TabLayout>

    <RelativeLayout
        android:id="@+id/relative_layout_avg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="40dp"
        android:layout_below="@+id/tab_layout">

        <View
            android:id="@+id/view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/text_view"
            android:background="@drawable/rectangle_light_blue"/>

        <TextView
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:text="@string/summary_detail_lumbar_extension_duration"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/line_chart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/tab_layout"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="15dp"
        tools:visibility="visible"/-->

</RelativeLayout>
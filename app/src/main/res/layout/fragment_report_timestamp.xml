<?xml version="1.0" encoding="utf-8"?>
<TableRow
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTimestamp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="30dp"
        android:layout_weight="10"
        android:tag="timestamp"
        android:text="Timestamp"
        android:textSize="6.85pt"
        android:textColor="@color/colorS4HOrange"
        android:fontFamily="@font/neo_sans_pro_bold"
        android:gravity="left"
        tools:ignore="MissingConstraints">
    </TextView>

    <TextView
        android:id="@+id/tvValueMyTime"
        style="@style/ReportDetailValue"
        android:layout_weight="1"
        android:tag="value"
        tools:visibility="invisible"
        tools:ignore="MissingConstraints">
    </TextView>

    <TextView
        android:id="@+id/tvValueWorkTime"
        style="@style/ReportDetailValue"
        android:layout_weight="1"
        android:tag="value"
        tools:visibility="invisible"
        tools:ignore="MissingConstraints">
    </TextView>

    <TextView
        android:id="@+id/tvUnits"
        style="@style/ReportDetailUnits"
        android:layout_weight="1"
        android:tag="value"
        tools:visibility="invisible"
        tools:ignore="MissingConstraints">
    </TextView>

</TableRow>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <View
        android:id="@+id/divider"
        style="@style/AdvancedConfigurationFragmentDividerStyle"
        app:layout_constraintBottom_toTopOf="@+id/calibrationLayout"
        app:layout_constraintEnd_toEndOf="@+id/layoutVibrationAngle"
        app:layout_constraintStart_toStartOf="@+id/layoutPostureCorrection" />

    <LinearLayout
        android:id="@+id/calibrationLayout"
        style="@style/AdvancedConfigurationLinearLayoutStyle"
        android:layout_marginTop="-20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider">

        <TextView
            android:id="@+id/calibrationButton"
            style="@style/AdvancedConfigurationFragmentListItemTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/fragment_device_configuration_advanced_uprightgo2_button_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="0.8"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                style="@style/AdvancedConfigurationArrowImageView"
                android:contentDescription="@string/option_arrow" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutPostureCorrection"
        style="@style/AdvancedConfigurationLinearLayoutStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calibrationLayout">

        <TextView
            style="@style/AdvancedConfigurationFragmentListItemTextView"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="@string/fragment_device_configuration_advanced_uprightgo2_posture_correction_text" />

        <LinearLayout
            android:id="@+id/switchPostureLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="end"
            android:orientation="horizontal">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchPostureCorrection"
                style="@style/AdvancedConfigurationFragment.switchCompatStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutVibrationAngle"
        style="@style/AdvancedConfigurationLinearLayoutStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutPostureCorrection">

        <TextView
            style="@style/AdvancedConfigurationFragmentListItemTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/fragment_device_configuration_advanced_uprightgo2_correction_angle_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="end"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinnerVibrationAngle"
                style="@style/AdvancedConfigurationFragmentSpinnerStyle"
                android:entries="@array/spinner_uprightgo2_angle"
                android:text="@string/fragment_device_configuration_advanced_uprightgo2_correction_angle_text" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutVibrationInterval"
        style="@style/AdvancedConfigurationLinearLayoutStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutVibrationAngle">

        <TextView
            style="@style/AdvancedConfigurationFragmentListItemTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/fragment_device_configuration_advanced_uprightgo2_correction_interval_text" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:gravity="center_vertical"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinnerVibrationInterval"
                style="@style/AdvancedConfigurationFragmentSpinnerStyle"
                android:entries="@array/spinner_uprightgo2_interval" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutVibrationPattern"
        style="@style/AdvancedConfigurationLinearLayoutStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutVibrationInterval">

        <TextView
            style="@style/AdvancedConfigurationFragmentListItemTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/fragment_device_configuration_advanced_uprightgo2_vibration_pattern_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="end"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinnerVibrationPattern"
                style="@style/AdvancedConfigurationFragmentSpinnerStyle"
                android:entries="@array/spinner_uprightgo2_pattern" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutVibrationStrength"
        style="@style/AdvancedConfigurationLinearLayoutStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutVibrationPattern">

        <TextView
            style="@style/AdvancedConfigurationFragmentListItemTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/fragment_device_configuration_advanced_uprightgo2_vibration_strength_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="end"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinnerVibrationStrength"
                style="@style/AdvancedConfigurationFragmentSpinnerStyle"
                android:entries="@array/spinner_uprightgo2_strength"
                android:text="@string/fragment_device_configuration_advanced_uprightgo2_vibration_strength_text" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_height="match_parent">



    <LinearLayout
        android:id="@+id/layoutPostureCorrection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/AdvancedConfigurationFragmentTextView"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="@string/fragment_device_configuration_advanced_uprightgo2_posture_correction_text" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="end"
            android:layout_weight="0.8"
            android:orientation="horizontal">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchPostureCorrection"
                style="@style/AdvancedConfigurationFragment.switchCompatStyle"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutVibrationAngle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layoutPostureCorrection"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/AdvancedConfigurationFragmentTextView"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/fragment_device_configuration_advanced_uprightgo2_correction_angle_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:gravity="end"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinnerVibrationAngle"
            android:layout_width="wrap_content"
            android:gravity="end"
            android:layout_height="wrap_content"
            android:entries="@array/spinner_uprightgo2_angle"
            android:text="@string/fragment_device_configuration_advanced_uprightgo2_correction_angle_text" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutVibrationInterval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layoutVibrationAngle"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/AdvancedConfigurationFragmentTextView"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/fragment_device_configuration_advanced_uprightgo2_correction_interval_text"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:gravity="center_vertical"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinnerVibrationInterval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/spinner_uprightgo2_interval"
                android:gravity="center"
                android:layout_gravity="end"/>
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutVibrationPattern"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/layoutVibrationInterval"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/AdvancedConfigurationFragmentTextView"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/fragment_device_configuration_advanced_uprightgo2_vibration_pattern_text"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="end"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinnerVibrationPattern"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:entries="@array/spinner_uprightgo2_pattern"
                    android:gravity="end" />
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutVibrationStrength"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layoutVibrationInterval"
        android:layout_marginTop="60dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/AdvancedConfigurationFragmentTextView"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/fragment_device_configuration_advanced_uprightgo2_vibration_strength_text" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="end"
            android:orientation="horizontal">

            <Spinner
            android:id="@+id/spinnerVibrationStrength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:entries="@array/spinner_uprightgo2_strength"
                android:gravity="end"
                android:layout_gravity="end"
            android:text="@string/fragment_device_configuration_advanced_uprightgo2_vibration_strength_text" />

    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutCalibration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/layoutVibrationStrength">

        <Button
            android:id="@+id/buttonCalibration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/fragment_device_configuration_advanced_uprightgo2_sensor_calibration_button_text" />
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="167dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
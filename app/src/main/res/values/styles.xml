<resources>

    <style name="Theme.Citizen" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorS4HGreyLight</item>
        <item name="toolbarStyle">@style/Widget.Citizen.Toolbar</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="Widget.Citizen.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.Citizen.Widget.Toolbar.Title</item>
    </style>


    <style name="TextAppearance.Citizen.Widget.Toolbar.Title" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/primus</item>
        <item name="android:textSize">7pt</item>
        <item name="android:textColor">@color/colorS4HDarkBlue</item>
    </style>

    <style name="Widget.Citizen.Button" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/colorS4HDarkBlue</item>
        <item name="android:textSize">9.2pt</item>
        <item name="android:fontFamily">@font/primus_bold</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:drawableEnd">@drawable/ic_button_circle_orange</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="preferenceTheme" parent="PreferenceThemeOverlay">
        <item name="colorAccent">@color/colorS4HDarkBlue</item>
        <item name="android:background">@color/colorS4HGreyLight</item>
        <item name="android:textColorPrimary">@color/colorS4HDarkBlue</item>
        <item name="android:textColorSecondary">@color/colorS4HDarkGreyVariant</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/primus_bold</item>
    </style>

    <style name="Drawer">
        <item name="background">@color/colorS4HGreyLight</item>
    </style>

    <style name="MenuItem" parent="Theme.Citizen">
        <item name="android:fontFamily">@font/primus</item>
        <item name="android:textSize">6pt</item>
        <item name="android:textColor">@color/colorS4HDarkBlue</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"></style>

    <style name="ReportDetailTitle">
        <item name="android:layout_width">114.520dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_rounded_darkblue_right_side_12dp</item>
        <item name="android:fontFamily">@font/primus</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">6.85pt</item>
    </style>

    <style name="ReportDetailUnits">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/neosanspro</item>
        <item name="android:textColor">@color/colorS4HDarkBlue</item>
        <item name="android:textSize">5.9pt</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="AppTheme.Summary" />

    <style name="AppTheme.Summary.Item">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="AppTheme.Summary.Item.ImageView">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="AppTheme.Summary.Item.TextView">
        <item name="fontWeight">700</item>
        <item name="android:fontFamily">@font/primus</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.About" />

    <style name="AppTheme.About.TextView" parent="Theme.AppCompat.DayNight">
        <item name="android:textColor">@color/colorS4HBlack</item>
        <item name="android:fontFamily">@font/primus</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
    </style>

    <style name="AppTheme.About.Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorS4HDarkBlue</item>
        <item name="android:textAppearance">@font/neosanspro</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@color/colorS4HGreyLight</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="ReportDetailValueType">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/neosanspro</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">5.9pt</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>

    </style>

    <style name="ReportDetailValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/neo_sans_pro_bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">5.9pt</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textColor">@color/colorS4HDarkBlue</item>
    </style>

    <style name="DialogSwitch">
        <item name="android:textColor">@color/colorS4HDarkBlue</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">18sp</item>
        <item name="colorControlActivated">@color/colorS4HDarkBlue</item>
        <item name="colorSwitchThumbNormal">@color/colorS4HDarkBlue</item>
        <item name="android:colorForeground">@color/colorS4HDarkBlue</item>
        <item name="fontWeight">700</item>
        <item name="android:fontFamily">@font/primus</item>
    </style>
</resources>
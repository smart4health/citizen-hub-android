<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorS4HLightBlue</item>
        <item name="colorPrimaryDark">@color/colorS4HDarkBlue</item>
        <item name="colorAccent">@color/colorS4HTurquoise</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="LatoRegularForDrawerTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>